{
  "name": "@juristr/nx-tailwind-sync",
  "version": "0.0.1",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "nx": {
    "targets": {
      "e2e": {
        "executor": "nx:run-commands",
        "dependsOn": ["build"],
        "options": {
          "command": "vitest run",
          "cwd": "packages/tailwind-sync-plugin"
        }
      },
      "build": {
        "executor": "@nx/js:tsc",
        "outputs": [
          "{options.outputPath}"
        ],
        "options": {
          "outputPath": "packages/tailwind-sync-plugin/dist",
          "main": "packages/tailwind-sync-plugin/src/index.ts",
          "tsConfig": "packages/tailwind-sync-plugin/tsconfig.lib.json",
          "rootDir": "packages/tailwind-sync-plugin/src",
          "generatePackageJson": false,
          "assets": [
            {
              "input": "./packages/tailwind-sync-plugin/src",
              "glob": "**/!(*.ts)",
              "output": "."
            },
            {
              "input": "./packages/tailwind-sync-plugin/src",
              "glob": "**/*.d.ts",
              "output": "."
            }
          ]
        }
      }
    }
  },
  "dependencies": {
    "@nx/devkit": "21.1.2",
    "tslib": "^2.3.0"
  },
  "generators": "./generators.json",
  "files": [
    "dist",
    "!**/*.tsbuildinfo",
    "generators.json"
  ],
  "publishConfig": {
    "access": "public"
  }
}
